{{!-- Title --}}
<div class="container">
    <div class="row">
        <div class="col-sm-12 text-center">
            <h1>EAT DA BURGER</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12">
            <img src="" alt="">
        </div>
    </div>
</div>

{{!-- Burger Data --}}
<div class="container">
    <div class="row">
        {{!-- Burgers ready to eat --}}
        <div class="col-sm-6 text-center">
                    <p>Available Burgers</p>
            <div class="row">
                <div class="col-sm-7">
                        {{!-- For loop to go through uneaten burgers --}}
                        {{#each data}}
                            {{!-- Making for loop only get uneaten burgers --}}
                            {{#unless this.devoured}}
                            <div class="row">
                            <h2>{{this.id}}. {{this.burger_name}}</h2>
                            </div>
                            {{/unless}}
                        {{/each}}
                </div>
                <div class="col-sm-5">
                    {{#each data}}
                        {{#unless this.devoured}}
                            <form method="POST" action="/burgers/update?_method=PUT" class="button-size">
                                <input type="hidden" name="burger_id" type="text" value={{this.id}}>
                                <br>
                                <button type="submit" class="btn btn-secondary btn-sm">DEVOUR {{this.id}}</button>
                            </form>
                        {{/unless}}
                    {{/each}}
                </div>
            </div>
        </div>
        {{!-- Burgers that have already been eaten --}}
        <div class="col-sm-6 text-center">
            <div class="row">
                <div class="col-sm-12">
                    <p>Eaten Burgers</p>
                        {{!-- For loop to go through eaten burgers --}}
                        {{#each data}}
                            {{!-- If burger has not been eaten do not include --}}
                            {{#if this.devoured}}
                            <input class="form-control" type="text" placeholder="{{this.id}}. {{this.burger_name}}"></input>
                            {{/if}}
                        {{/each}}
                </div>
            </div>
        </div>
    </div>
</div>

{{!-- Add a burger --}}
<div class="container">
    <div class="row">
        <div class="col-sm-12 text-center">
            <form action="/burgers/create" method="POST">
                <input type="text" name="burger_name" class="form-control" value="" id="enter_text">
                <button type="submit" class="btn btn-primary btn-sm" id="text-enter-button">SUBMIT</button>
            </form>
            <p>Enter in a burger you would like to eat!</p>
        </div>
    </div>
</div>